cloudflare_api_token = "your-api-token"

zones = {
  "example-com" = {
    zone_id = "your-zone-id-1"
    records = {
      "www" = {
        name    = "www"
        value   = "192.0.2.1"
        type    = "A"
        proxied = true
      }
      "api" = {
        name    = "api"
        value   = "192.0.2.2"
        type    = "A"
      }
    }
  }
  "example-net" = {
    zone_id = "your-zone-id-2"
    records = {
      "mail" = {
        name     = "mail"
        value    = "mail.example.net"
        type     = "CNAME"
        priority = 10
      }
    }
  }
}

adguard_host     = "192.168.1.100"
adguard_username = "admin"
adguard_password = "password"
adguard_rewrites = [
  {
    domain = "example.local"
    answer = "192.168.1.10"
  }
]
